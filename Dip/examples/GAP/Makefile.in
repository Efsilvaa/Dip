#===========================================================================#
EXEDECOMP = decomp_gap@EXEEXT@

# source files
OBJS          = GAP_Main.@OBJEXT@
OBJS         += GAP_Instance.@OBJEXT@
OBJS         += GAP_DecompApp.@OBJEXT@

#===========================================================================#
# additional libraries needed (libKnapPisinger)
KNAP_DIR = ../ExternalSolvers/Knapsack/Pisinger
KNAP_LIB  = KnapPisinger
KNAP_INC  = $(KNAP_DIR)

#===========================================================================#
# additional include and linnk flags
ADDLIBS      += -L$(KNAP_DIR) -l$(KNAP_LIB)
ADDINCFLAGS  += -I$(KNAP_INC)

#===========================================================================#
# directory to the source files
SRCDIR = @srcdir@
VPATH  = @srcdir@

#===========================================================================#
# C++ compiler command
CXX = @CXX@
# C++ compiler options
CXXFLAGS = @CXXFLAGS@
# C++ compiler options for linking
CXXLINKFLAGS = @RPATH_FLAGS@

#===========================================================================#
# directory with COIN header files
COININCDIR = @abs_include_dir@
# directory with COIN libraries
COINLIBDIR = @abs_lib_dir@

# includes, use the CYGPATH_W variables to allow compilation with win
INCL =  -I`$(CYGPATH_W) $(COININCDIR)` $(ADDINCFLAGS)

#===========================================================================#
# include COIN flags and library options
include ../Makefile.Examples

#===========================================================================#
# The following is necessary under cygwin, if native compilers are used
CYGPATH_W = @CYGPATH_W@

#===========================================================================#
all: $(EXEDECOMP)

.SUFFIXES: .cpp .c .o .obj

$(EXEDECOMP): $(KNAP_DIR)/libKnapPisinger.a $(OBJS)
	bla=;\
	for file in $(OBJS); do bla="$$bla `$(CYGPATH_W) $$file`"; done; \
	$(CXX) $(CXXLINKFLAGS) $(CXXFLAGS) -o $@ $$bla $(ADDLIBS) $(LIBS)

clean:
	(cd ${KNAP_DIR} && ${MAKE} clean)
	rm -rf $(EXE) $(OBJS)

$(KNAP_DIR)/libKnapPisinger.a:
	echo "chmod +x data_extract.sh"
	chmod +x data_extract.sh
	./data_extract.sh
	echo "chmod +x get_pisinger.sh"
	chmod +x get_pisinger.sh
	./get_pisinger.sh
	(cd ${KNAP_DIR} && ${MAKE})

.cpp.o:
	$(CXX) $(CXXFLAGS) $(INCL) -c -o $@ `test -f '$<' || echo '$(SRCDIR)/'`$<

.cpp.obj:
	$(CXX) $(CXXFLAGS) $(INCL) -c -o $@ `if test -f '$<'; then $(CYGPATH_W) '$<'; else $(CYGPATH_W) '$(SRCDIR)/$<'; fi`
