#===========================================================================#
EXEDECOMP = decomp_milpblock@EXEEXT@

#source files
OBJS        = MILPBlock_Main.@OBJEXT@
OBJS       += MILPBlock_DecompApp.@OBJEXT@

#===========================================================================#
# directory to the source files
SRCDIR = @srcdir@
VPATH = @srcdir@

#===========================================================================#
# include COIN flags and library options

include ../Makefile.Examples

#===========================================================================#

all: $(EXEDECOMP)

.SUFFIXES: .cpp .c .o .obj

$(EXEDECOMP): $(OBJS)
	bla=;\
	for file in $(OBJS); do bla="$$bla `$(CYGPATH_W) $$file`"; done; \
	$(CXX) $(CXXLINKFLAGS) $(CXXFLAGS) -o $@ $$bla $(LIBS)

data:
	cd @srcdir@/../../data/MILP/block; \
	tar -zxvf retail.tgz; \
	tar -zxvf atm.tgz;


clean:
	rm -rf $(EXE) $(OBJS)

.cpp.o:
	$(CXX) $(CXXFLAGS) $(CFLAGS) -c -o $@ `test -f '$<' || echo '$(SRCDIR)/'`$<


.cpp.obj:
	$(CXX) $(CXXFLAGS) $(CFLAGS) -c -o $@ `if test -f '$<'; then $(CYGPATH_W) '$<'; else $(CYGPATH_W) '$(SRCDIR)/$<'; fi`
